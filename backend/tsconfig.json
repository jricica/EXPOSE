{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "types": ["node"],
    "skipLibCheck": true
  },

  "include": ["src/**/*", "src/sentry.test.ts"],
  "exclude": ["node_modules"]
}
